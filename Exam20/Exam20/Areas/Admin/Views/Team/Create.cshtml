
@using Exam.Core.Models;
@model Team
<div class="container"> 

    <form method="post" enctype="multipart/form-data">
        
    
    <div class=" row">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" style="color:red"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Position" class="form-label">Position</label>
                <input asp-for="Position" class="form-control" placeholder="Position">
                <span asp-validation-for="Position" style="color:red"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control" placeholder="Description">
                <span asp-validation-for="Description" style="color:red"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ImgFile" class="form-label">ImgFile</label>
                <input asp-for="ImgFile" class="form-control" placeholder="ImgFile">
                <span asp-validation-for="Name" style="color:red"></span>
            </div>

            <div asp-validation-summary="All"></div>

            <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    
    
    
    
    
    
    </form>


</div>

